doctype html
html
   head
      title Edit User
      link(rel="stylesheet", type="text/css", href="../css/style.css")

   body
      h1 Editing #{name}
      form(action="/editExisting", method="post")
         input(type="text", placeholder="First Name", name="firstName", value=firstName)
         br
         input(type="text", placeholder="Last Name", name="lastName", value=lastName)
         br
         input(type="text", placeholder="Email", name="email", value=email)
         br
         input(type="number", placeholder="Age", name="age", value=age)
         br
         input(type="submit")
   a(href="/users") Back to User List
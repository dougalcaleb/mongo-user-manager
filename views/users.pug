doctype html
html
   head
      title User List
      link(rel="stylesheet", type="text/css", href="../css/style.css")
   body
      h1 #{userCount} users
      table
         tr
            td User ID
            td First Name
            td Last Name
            td Age
            td Email
         for user in users
            tr
               td #{user.id}
               td #{user.firstName}
               td #{user.lastName}
               td #{user.age}
               td #{user.email}
               td
                  a(href="/edit/"+user.id+"/"+user.firstName+"/"+user.lastName+"/"+user.age+"/"+user.email) EDIT
               td
                  a(href="/delete/"+user.id) DELETE
      br
      a(href="/addUser") Add user
      br
      a(href="/search") Search
      br
      a(href="/users") See All Users (Unsorted)